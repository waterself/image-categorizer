<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="UserControl" x:Key="UserControlTrigerTheme">
        <Setter Property="Focusable" Value="True"/>
    </Style>

    <Style TargetType="{x:Type Border}" x:Key="UCBorder">
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" Value="True">
                
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>