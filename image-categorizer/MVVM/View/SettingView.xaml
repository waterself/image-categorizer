<UserControl
    x:Class="image_categorizer.MVVM.View.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:image_categorizer.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="498"
    d:DesignWidth="740"
    mc:Ignorable="d">
    <Grid Background="{StaticResource BackgroundSolidColorBrush}">
        <DockPanel>
            <Border
                x:Name="PathSelector"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="{StaticResource WhiteSolidColorBrush}"
                CornerRadius="10"
                DockPanel.Dock="Top">
                <StackPanel Margin="5,5,5,5" Orientation="Vertical">
                    <Border
                        x:Name="InputPathSelector"
                        Background="{StaticResource FrameSolidColorBrush}"
                        CornerRadius="5">
                        <StackPanel Margin="10,10,10,10" Orientation="Vertical">
                            <TextBlock Background="{StaticResource BackgroundSolidColorBrush}" Foreground="#ffffff">Default InputPath</TextBlock>
                            <DockPanel HorizontalAlignment="Stretch" LastChildFill="True">
                                <Button
                                    x:Name="InputPathSelectButton"
                                    Width="100"
                                    Command="{Binding SelectInputPathCommand}"
                                    Content="SelectPath"
                                    DockPanel.Dock="Right"
                                    Style="{StaticResource PathSelectButtonThemes}" />
                                <TextBlock
                                    Background="{StaticResource BackgroundSolidColorBrush}"
                                    Foreground="#ffffff"
                                    Text="{Binding RunModel.InputDirectorytPath, TargetNullValue=Please Select Input Directory}" />

                            </DockPanel>
                        </StackPanel>
                    </Border>
                    <Border
                        x:Name="OutputPathSelector"
                        Background="{StaticResource FrameSolidColorBrush}"
                        CornerRadius="5">
                        <StackPanel Margin="10,10,10,10" Orientation="Vertical">
                            <TextBlock Background="{StaticResource BackgroundSolidColorBrush}" Foreground="#ffffff">Default OutputPath</TextBlock>
                            <DockPanel HorizontalAlignment="Stretch" LastChildFill="True">
                                <Button
                                    x:Name="OutputPathSelectButton"
                                    Width="100"
                                    Command="{Binding SelectOutputPathCommand}"
                                    Content="SelectPath"
                                    DockPanel.Dock="Right"
                                    Style="{StaticResource PathSelectButtonThemes}" />
                                <TextBlock
                                    Background="{StaticResource BackgroundSolidColorBrush}"
                                    Foreground="#ffffff"
                                    Text="{Binding RunModel.OutputDirectorytPath, TargetNullValue=Please Select Input Directory}" />
                            </DockPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            <Border
                x:Name="DirectoryRuleSelecter"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="{StaticResource WhiteSolidColorBrush}"
                CornerRadius="10"
                DockPanel.Dock="Top">
                <StackPanel Margin="5" Orientation="Vertical">
                    <Border Background="{StaticResource FrameSolidColorBrush}" CornerRadius="5">
                        <StackPanel Margin="10">
                            <TextBlock Background="{StaticResource BackgroundSolidColorBrush}" Foreground="#ffffff">
                                Directory Rules
                            </TextBlock>
                            <Grid HorizontalAlignment="Stretch" Background="{StaticResource BackgroundSolidColorBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Border Grid.Column="0" Margin="5">
                                    <ComboBox />
                                </Border>
                                <Border Grid.Column="1" Margin="5">
                                    <ComboBox />
                                </Border>
                                <Border Grid.Column="2" Margin="5">
                                    <ComboBox />
                                </Border>
                                <Border Grid.Column="3" Margin="5">
                                    <ComboBox />
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            <Border
                x:Name="FileRuleSelecter"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="{StaticResource WhiteSolidColorBrush}"
                CornerRadius="10"
                DockPanel.Dock="Top">
                <StackPanel Margin="5" Orientation="Vertical">
                    <Border Background="{StaticResource FrameSolidColorBrush}" CornerRadius="5">
                        <StackPanel Margin="10">
                            <TextBlock Background="{StaticResource BackgroundSolidColorBrush}" Foreground="#ffffff">
                                FileName Rule
                            </TextBlock>
                            <Grid HorizontalAlignment="Stretch" Background="{StaticResource BackgroundSolidColorBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Border Grid.Column="0" Margin="5">
                                    <ComboBox />
                                </Border>
                                <Border Grid.Column="1" Margin="5">
                                    <ComboBox />
                                </Border>
                                <Border Grid.Column="2" Margin="5">
                                    <ComboBox />
                                </Border>
                                <Border Grid.Column="3" Margin="5">
                                    <ComboBox />
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            <DockPanel LastChildFill="False">
                <Button
                    Width="150"
                    Height="50"
                    Margin="10"
                    DockPanel.Dock="right"
                    FontSize="20"
                    Style="{StaticResource MainAcceptButtonThemes}">
                    Save
                </Button>
            </DockPanel>
        </DockPanel>
    </Grid>
</UserControl>
