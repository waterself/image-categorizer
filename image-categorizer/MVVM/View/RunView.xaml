<UserControl
    x:Class="image_categorizer.MVVM.View.RunView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:image_categorizer.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:image_categorizer.MVVM.ViewModel"
    d:DesignHeight="498"
    d:DesignWidth="740"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ButtonOne" TargetType="{x:Type Button}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Azure" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <viewModel:RunViewModel />
    </UserControl.DataContext>

    <Border Background="{StaticResource BackgroundSolidColorBrush}">
        <StackPanel VerticalAlignment="Top">
            <Border
                x:Name="PathSelector"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="{StaticResource WhiteSolidColorBrush}"
                CornerRadius="10">
                <StackPanel
                    x:Name="InputPathSelector"
                    Margin="5,5,5,5"
                    Orientation="Vertical">
                    <Border Background="{StaticResource FrameSolidColorBrush}" CornerRadius="5">
                        <StackPanel Margin="10,10,10,10" Orientation="Vertical">
                            <TextBlock Background="{StaticResource BackgroundSolidColorBrush}" Foreground="{StaticResource WhiteSolidColorBrush}">InputPath</TextBlock>
                            <DockPanel HorizontalAlignment="Stretch" LastChildFill="True">
                                <Button
                                    x:Name="InputPathSelectButton"
                                    Width="100"
                                    Command="{Binding SelectInputPathCommand}"
                                    Content="SelectPath"
                                    DockPanel.Dock="Right"
                                    Style="{StaticResource PathSelectButtonThemes}" />
                                <TextBlock
                                    Background="{StaticResource BackgroundSolidColorBrush}"
                                    Foreground="{StaticResource WhiteSolidColorBrush}"
                                    Text="{Binding RunModel.InputDirectorytPath, TargetNullValue=Please Select Input Directory}" />

                            </DockPanel>
                        </StackPanel>
                    </Border>
                    <Border
                        x:Name="OutputPathSelector"
                        Background="{StaticResource FrameSolidColorBrush}"
                        CornerRadius="5">
                        <StackPanel Margin="10,10,10,10" Orientation="Vertical">
                            <TextBlock Background="{StaticResource BackgroundSolidColorBrush}" Foreground="{StaticResource WhiteSolidColorBrush}">OutputPath</TextBlock>
                            <DockPanel HorizontalAlignment="Stretch" LastChildFill="True">
                                <Button
                                    x:Name="OutputPathSelectButton"
                                    Width="100"
                                    Command="{Binding SelectOutputPathCommand}"
                                    Content="SelectPath"
                                    DockPanel.Dock="Right"
                                    Style="{StaticResource PathSelectButtonThemes}" />
                                <TextBlock
                                    Background="{StaticResource BackgroundSolidColorBrush}"
                                    Foreground="{StaticResource WhiteSolidColorBrush}"
                                    Text="{Binding RunModel.OutputDirectorytPath, TargetNullValue=Please Select Input Directory}" />
                            </DockPanel>
                        </StackPanel>
                    </Border>
                    <Border
                        x:Name="TotalFileNumber"
                        Background="#263238"
                        CornerRadius="5">
                        <DockPanel Margin="10,10,10,10" LastChildFill="False">
                            <TextBlock
                                Background="{StaticResource BackgroundSolidColorBrush}"
                                DockPanel.Dock="Left"
                                Foreground="{StaticResource WhiteSolidColorBrush}"
                                Text="TotalFiles" />
                            <TextBlock
                                Background="{StaticResource BackgroundSolidColorBrush}"
                                DockPanel.Dock="Right"
                                Foreground="{StaticResource WhiteSolidColorBrush}"
                                Text="{Binding RunModel.FileCount}" />

                        </DockPanel>
                    </Border>

                </StackPanel>

            </Border>
            <Canvas MinHeight="140" />
            <DockPanel LastChildFill="False">
                <Border
                    MinWidth="200"
                    MinHeight="150"
                    Margin="10,10,10,10"
                    Background="{StaticResource FrameSolidColorBrush}"
                    CornerRadius="10">
                    <Border
                        Margin="5"
                        Background="{StaticResource BackgroundSolidColorBrush}"
                        CornerRadius="5" />
                </Border>
                <Button
                    x:Name="RunButton"
                    Width="150"
                    Height="50"
                    Command="{Binding RunButtonCommand}"
                    Content="Run"
                    DockPanel.Dock="Right"
                    FontSize="20"
                    Style="{StaticResource MainAcceptButtonThemes}" />
            </DockPanel>
        </StackPanel>
    </Border>
</UserControl>
