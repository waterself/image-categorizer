<UserControl x:Class="image_categorizer.MVVM.View.RunView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:image_categorizer.MVVM.View"
             xmlns:viewModel="clr-namespace:image_categorizer.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="498" d:DesignWidth="740">
    
    <UserControl.Resources>
        <Style x:Key="ButtonOne" TargetType="{x:Type Button}" >
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Azure" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <viewModel:RunViewModel/>
    </UserControl.DataContext>
    
    <Border Background="#4f5b62" BorderBrush="#263238" BorderThickness="5">
        <StackPanel
            VerticalAlignment="Top">
            <Border
                x:Name="PathSelector"
                Background="white"
                CornerRadius="10"
                Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
                <StackPanel 
                    x:Name="InputPathSelector"
                    Orientation="Vertical"
                           Margin="5,5,5,5" >
                    <Border Background="#263238"
                            CornerRadius="5"
                            >
                        <StackPanel Orientation="Vertical"
                                Margin="10, 10, 10, 10">
                            <TextBlock
                                Background="#4f5b62"
                                Foreground="#ffffff"
                                >InputPath</TextBlock>
                            <DockPanel LastChildFill="True" 
                                        HorizontalAlignment="Stretch"
                                        >
                                <Button x:Name="InputPathSelectButton" 
                                    DockPanel.Dock="Right"
                                        Width="100"
                                        Command="{Binding SelectInputPathCommand}"
                                        Content="SelectPath"
                                        Style="{StaticResource PathSelectButtonThemes}"></Button>
                                <TextBlock 
                                    Background="#4f5b62"
                                    Foreground="#ffffff"
                                    
                                    Text="{Binding RunModel.InputDirectorytPath, 
                                    TargetNullValue=Please Select Input Directory}"></TextBlock>

                            </DockPanel>
                        </StackPanel>
                    </Border>
                    <Border x:Name="OutputPathSelector"
                        Background="#263238"
                            CornerRadius="5">
                        <StackPanel Orientation="Vertical"
                                Margin="10, 10, 10, 10">
                            <TextBlock
                                Background="#4f5b62"
                                Foreground="#ffffff"
                                >OutputPath</TextBlock>
                            <DockPanel LastChildFill="True" 
                                        HorizontalAlignment="Stretch"
                                        >
                                <Button x:Name="OutputPathSelectButton"
                                    DockPanel.Dock="Right"
                                        Width="100"
                                        Command="{Binding SelectOutputPathCommand}"
                                        Content="SelectPath"
                                        Style="{StaticResource PathSelectButtonThemes}"></Button>
                                <TextBlock 
                                    Background="#4f5b62"
                                    Foreground="#ffffff"
                                    Text="{Binding RunModel.OutputDirectorytPath, 
                                    TargetNullValue=Please Select Input Directory}"></TextBlock>
                            </DockPanel>
                        </StackPanel>
                    </Border>
                    <Border x:Name="TotalFileNumber" 
                            CornerRadius="5"
                        Background="#263238">
                        <DockPanel
                            LastChildFill="False"
                        Margin="10, 10 ,10 ,10">
                            <TextBlock DockPanel.Dock="Left"
                                    Background="#4f5b62"
                                    Foreground="#ffffff"
                                    Text="TotalFiles"/>
                            <TextBlock DockPanel.Dock="Right"
                                    Background="#4f5b62"
                                    Foreground="#ffffff"
                                    Text="{Binding RunModel.FileCount}"/>

                        </DockPanel>
                    </Border>

                </StackPanel>

            </Border>
            <Canvas MinHeight="140"/>
            <DockPanel
                LastChildFill="False">
                <Border
                    CornerRadius="10"
                    Margin="10, 10, 10, 10"
                    Background="#263238"
                    MinHeight="150"
                    MinWidth="200">
                    <Border
                        CornerRadius="5"
                        Background="#4f5b62"
                        Margin="5">
                        
                    </Border>
                </Border>
                <Button
                    x:Name="RunButton"
                    Command="{Binding RunButtonCommand}"
                    Style="{StaticResource MainAcceptButtonThemes}"
                    Content="Run" 
                    FontSize="20"
                    DockPanel.Dock="Right"
                    Height="50" 
                    Width="150">
                    
                </Button>
            </DockPanel>
        </StackPanel>
    </Border>
</UserControl>
